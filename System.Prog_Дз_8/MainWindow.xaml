<Window x:Class="System.Prog_Дз_8.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:System.Prog_Дз_8"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800" Closed="Window_Closed">
    <DockPanel x:Name="dockPanel">
        <Menu x:Name="mainMenu">
            <MenuItem Header="Themes">
                <MenuItem x:Name="BlackThemeMenuItem" Header="Black" Click="BlackThemeMenuItem_Click"></MenuItem>
                <MenuItem x:Name="WhiteThemeMenuItem" Header="White" Click="WhiteThemeMenuItem_Click"></MenuItem>
                <MenuItem x:Name="SystemThemeMenuItem" Header="System" Click="SystemThemeMenuItem_Click"></MenuItem>
            </MenuItem>
            <MenuItem Header="FontSize">
                <MenuItem x:Name="Size8MenuItem" Header="8" Click="Size8MenuItem_Click"></MenuItem>
                <MenuItem x:Name="Size14MenuItem" Header="14" Click="Size14MenuItem_Click"></MenuItem>
                <MenuItem x:Name="Size20MenuItem" Header="20" Click="Size20MenuItem_Click"></MenuItem>
            </MenuItem>
        </Menu>
    </DockPanel>
</Window>
